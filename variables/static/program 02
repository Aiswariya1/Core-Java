    // Access it in 3 common ways:-

    class Test{
    static int x=10;
    public static void main(String[]args){

      //by directly
         System.out.println(x); //10

      //by classname
      System.out.println(Test.x); //10

      //by object reference
      Test t1=new Test();
      System.out.println(t1.x); //10

    }
}

